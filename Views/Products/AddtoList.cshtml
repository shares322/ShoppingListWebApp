@model ShoppingListWebApp.Models.Products
@using System.Collections

@{
    ViewData["Title"] = "Add";
}

<h1>Add Product to Shopping List</h1>

<h4>Products</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShoppingCart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" class="form-control" />
                <span asp-validation-for="Productid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                @*<input asp-for="ProductName" class="form-control" />*@
                @Html.DropDownListFor(p => p.ProductName, (IEnumerable<SelectListItem>)ViewData["ProductNames"])
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add to Shopping Cart List" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
